{
  "name": "@lapidist/dtif",
  "private": true,
  "type": "module",
  "workspaces": [
    "schema",
    "validator",
    "parser",
    "language-server"
  ],
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "test": "node tests/tooling/snapshot-serializer.test.mjs && node tests/tooling/run.mjs && node tests/tooling/validate-examples.mjs",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:fix": "markdownlint --fix \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:ts": "eslint .",
    "lint:parser": "eslint parser",
    "lint:language-server": "eslint language-server",
    "typecheck": "npm --workspaces --if-present run typecheck",
    "validate:dtif": "node scripts/validate-markdown-dtif.mjs",
    "build": "npm run build:packages",
    "build:parser": "npm run build --workspace=@lapidist/dtif-parser",
    "build:language-server": "npm run build --workspace=@lapidist/dtif-language-server",
    "build:packages": "node scripts/build-packages.mjs",
    "test:parser": "npm test --workspace=@lapidist/dtif-parser",
    "test:language-server": "npm test --workspace=@lapidist/dtif-language-server",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "lint:docs": "markdownlint \"docs/**/*.md\"",
    "changeset": "changeset",
    "release": "changeset publish",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.27.10",
    "@dtsgenerator/replace-namespace": "^1.7.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^3.0.1",
    "dtsgenerator": "^3.19.2",
    "eslint": "^10.0.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "vite": "^7.0.0",
    "vitepress": "^1.6.4"
  }
}
