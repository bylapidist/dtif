{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "color": {
    "accent": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [0.2, 0.4, 0.6, 1.0]
      }
    }
  },
  "dimension": {
    "spacing": {
      "$type": "dimension",
      "$value": {
        "dimensionType": "length",
        "value": 4,
        "unit": "px"
      }
    }
  },
  "border": {
    "invalid": {
      "$type": "border",
      "$value": {
        "borderType": "css.border",
        "color": { "$ref": "#/dimension/spacing" },
        "style": "solid",
        "width": {
          "dimensionType": "length",
          "value": 2,
          "unit": "px"
        }
      }
    }
  }
}
