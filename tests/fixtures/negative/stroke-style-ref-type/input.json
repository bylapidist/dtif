{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "color": {
    "accent": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [0.5, 0.1, 0.9, 1.0]
      }
    }
  },
  "border": {
    "invalid-stroke": {
      "$type": "border",
      "$value": {
        "borderType": "css.border",
        "color": {
          "colorSpace": "srgb",
          "components": [0.0, 0.0, 0.0, 1.0]
        },
        "style": "solid",
        "strokeStyle": { "$ref": "#/color/accent" },
        "width": { "dimensionType": "length", "value": 1, "unit": "px" }
      }
    }
  }
}
