{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "component": {
    "base": {
      "$type": "component",
      "$value": {
        "$slots": {
          "background": {
            "$type": "color",
            "$value": {
              "colorSpace": "srgb",
              "components": [0.1, 0.2, 0.3, 1]
            }
          }
        }
      }
    },
    "invalid": {
      "$type": "component",
      "$value": {
        "$slots": {
          "background": { "$type": "color", "$ref": "#/component/base" }
        }
      }
    }
  }
}
