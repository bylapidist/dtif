{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "color": {
    "brand": {
      "base": {
        "$value": { "colorSpace": "srgb", "components": [1, 0, 0, 1] }
      },
      "dark": {
        "$type": "color",
        "$value": { "colorSpace": "srgb", "components": [0, 0, 0, 1] }
      }
    }
  },
  "$overrides": [
    {
      "$token": "#/color/brand/base",
      "$when": { "prefers-color-scheme": "dark" },
      "$ref": "#/color/brand/dark"
    }
  ]
}
