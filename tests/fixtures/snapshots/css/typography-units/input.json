{
  "$schema": "https://dtif.lapidist.net/schema/core.json",
  "percentSize": {
    "$type": "typography",
    "$value": {
      "typographyType": "body",
      "fontFamily": "Inter",
      "fontSize": {
        "dimensionType": "length",
        "value": 150,
        "unit": "%"
      }
    }
  },
  "viewport": {
    "$type": "typography",
    "$value": {
      "typographyType": "body",
      "fontFamily": "Inter",
      "fontFeatures": ["smcp"],
      "fontSize": {
        "dimensionType": "length",
        "value": 5,
        "unit": "vw"
      },
      "letterSpacing": {
        "dimensionType": "length",
        "value": 1,
        "unit": "sp",
        "fontScale": true
      },
      "lineHeight": {
        "dimensionType": "length",
        "value": 10,
        "unit": "vh"
      },
      "wordSpacing": {
        "dimensionType": "length",
        "value": 2,
        "unit": "ch"
      }
    }
  }
}
