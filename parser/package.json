{
  "name": "@lapidist/dtif-parser",
  "version": "1.0.6",
  "description": "Canonical parser and runtime for Design Token Interchange Format (DTIF) documents.",
  "type": "module",
  "license": "MIT",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "bin": {
    "dtif-parse": "./dist/cli/parse.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./parse-tokens": {
      "types": "./dist/tokens/parse-tokens.d.ts",
      "import": "./dist/tokens/parse-tokens.js"
    },
    "./adapters/node": {
      "types": "./dist/adapters/node/index.d.ts",
      "import": "./dist/adapters/node/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "test": "node --import tsx --test ./tests/**/*.test.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@lapidist/dtif-schema": "workspace:^1.0.6",
    "@lapidist/dtif-validator": "workspace:^1.0.6",
    "yaml": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bylapidist/dtif.git",
    "directory": "parser"
  },
  "publishConfig": {
    "access": "public"
  }
}
